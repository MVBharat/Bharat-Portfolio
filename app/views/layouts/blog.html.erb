<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <meta name="keyword" content="<%= @seo_keywords %>" />
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render partial: 'shared/blog_nav' %>      
    <%= render partial: 'shared/blog_mastheader' %>      
        
    
    <div class="container">
      <div class="row">

        <%= yield %>
      
        <%= render partial: 'shared/blog_sidebar' %>
      
      </div>

      <%= render partial: 'shared/blog_footer' %>      
      
      <%= source_helper("blog") %>    
           
    </div>


  </body>
</html>
