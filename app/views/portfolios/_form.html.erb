<%= form_for @portfolio_item do |f| %>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :subtitle %>
				<%= f.text_field :subtitle, class: 'form-control' %>		
			</div>
			
			<div class="form-group">
				<label class="btn btn-primary">
					Upload Main Image <%= f.file_field :main_image, style: 'display: none' %>
				</label>
			</div>
			<div class="form-group">
				<label class="btn btn-primary">
					Upload Thumb Image <%= f.file_field :thumb_image, style: 'display: none' %>
				</label>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">		
				<%= f.label :body %>
				<%= f.text_area :body, rows: 15, class: 'form-control' %>
			</div>
		</div>
	</div>
	<hr>
	<h3>New Technologies</h3>
	<div class="row">
		<div class="col-md-12">
			<div>
				<%= f.fields_for :technologies do |technology_form| %>
					<div class="form-group">
						<%= technology_form.label  :name %>
						<%= technology_form.text_field :name, class: 'form-control' %>
					</div>
				<% end %>
			</div>
			<div class="form-group">		
				<%= f.submit "Save Portfolio Item", class: 'btn btn-primary btn-block' %>
			</div>
		</div>			
	</div>

<% end %>
